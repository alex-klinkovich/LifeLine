<Page x:Class="LifeLine.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="LifeLine"
        MinHeight="650"
        MinWidth="1000"
        
        Background="#1E293B">

    <!-- ================== RESOURCES ================== -->
    <Page.Resources>

        <!-- Rounded Button -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <!-- ================== ROOT ================== -->
    <Grid>
        <Frame x:Name="MainFrame" 
       NavigationUIVisibility="Hidden"
              
       Background="#1E293B"/>
        <!-- FULL SCREEN FRAME -->


        <!-- ================== HOME PAGE ================== -->
        <Grid Background="#1E293B" Margin="32">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="LifeLine"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="#E5E7EB"/>
                <TextBlock Text="Emergency assistance and responder coordination system"
                               FontSize="14"
                               Foreground="#94A3B8"/>
            </StackPanel>

            <!-- CONTENT -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ================== EMERGENCY TILE ================== -->
                <Border Grid.Row="0"
                            Grid.Column="0"
                            Grid.RowSpan="2"
                            Margin="12"
                            Background="#273449"
                            CornerRadius="28"
                            BorderBrush="#334155"
                            BorderThickness="1.5"
                            Padding="30">

                    <!-- PROPER SCALING GRID -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- ICON -->
                        <TextBlock Grid.Row="0"
                                       Text="🚨"
                                       FontSize="56"
                                       Margin="0,0,0,16"
                                       Foreground="#E5E7EB"
                                       Opacity="0.7"/>

                        <!-- TITLE -->
                        <TextBlock Grid.Row="1"
                                       Text="Emergency Help"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#E5E7EB"
                                       Margin="0,0,0,10"/>

                        <!-- SUBTITLE -->
                        <TextBlock Grid.Row="2"
                                       Text="Instant connection to nearby responders and doctors"
                                       FontSize="15"
                                       Foreground="#94A3B8"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,20"/>

                        <!-- FEATURES -->
                        <StackPanel Grid.Row="3" Margin="0,0,0,20">
                            <TextBlock Text="• No registration required"
                                           Foreground="#CBD5E1"
                                           FontSize="14"
                                           Margin="0,0,0,6"/>
                            <TextBlock Text="• Automatic location sharing"
                                           Foreground="#CBD5E1"
                                           FontSize="14"
                                           Margin="0,0,0,6"/>
                            <TextBlock Text="• Secure communication"
                                           Foreground="#CBD5E1"
                                           FontSize="14"/>
                        </StackPanel>

                        <!-- CTA BUTTON -->
                        <Button Grid.Row="5"
                                    Style="{StaticResource RoundedButton}"
                                    Content="GET HELP NOW"
                                    FontWeight="Bold"
                                    Background="#EF4444"
                                    FontSize="22"
                                    MinHeight="64"
                                    Padding="24,12"
                                    HorizontalAlignment="Stretch"
                                    Click="EmergencyButton_Click"/>
                    </Grid>
                </Border>

                <!-- ================== RESPONDER TILE ================== -->
                <Border Grid.Row="0"
                            Grid.Column="1"
                            Margin="12"
                            Background="#273449"
                            CornerRadius="22"
                            BorderBrush="#334155"
                            BorderThickness="1.5"
                            Padding="24">

                    <Grid VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.4*"/>
                            <RowDefinition Height="0.2*"/>
                            <RowDefinition Height="0.2*"/>
                            <RowDefinition Height="0.8*"/>
                        </Grid.RowDefinitions>

                        <TextBlock 
                            Grid.Row="0"
                            Text="Login and Register"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="#E5E7EB"/>

                        <TextBlock 
                            Grid.Row="1"
                            Text="• Respond to emergencies in real time"
                            FontSize="13"
                            Foreground="#94A3B8"/>
                        <TextBlock 
                            Grid.Row="2"
                            Text="• View emergency history and profile"
                            FontSize="13"
                            Foreground="#94A3B8"/>
                        <Button Style="{StaticResource RoundedButton}"
                            Content="Login / Register"
                            Background="#3A7BD5"
                            MinHeight="48"
                            FontWeight="DemiBold"
                            Click="LoginRegisterButton_Click" Height="48"
                            Grid.Row="3"
                                Margin="0,15,0,0"/>
                    </Grid>
                </Border>

                <!-- ================== ABOUT TILE ================== -->
                <Border Grid.Row="1"
                            Grid.Column="1"
                            Margin="12"
                            Background="#273449"
                            CornerRadius="22"
                            BorderBrush="#334155"
                            BorderThickness="1.5"
                            Padding="24">
                    <!--
                    <StackPanel Margin="0,-4,0,10">
                        <TextBlock Text="About LifeLine"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#E5E7EB"/>
                        <TextBlock Text="System overview and features"
                                       FontSize="13"
                                       Foreground="#94A3B8"
                                       Margin="0,10,0,16"/>
                        <Button Style="{StaticResource RoundedButton}"
                                    Content="Open"
                                    Background="#27AE60"
                                    MinHeight="48"
                                    Click="AboutButton_Click"
                                    Margin="0,10,0,10"/>
                    </StackPanel>
                    -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.2*"/>
                            <RowDefinition Height="0.2*"/>
                            <RowDefinition Height="0.6*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="About LifeLine"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#E5E7EB"/>

                        <TextBlock Text="System overview and features"
                                       FontSize="13"
                                       Foreground="#94A3B8"
                                       Margin="0,0,0,10"
                                       Grid.Row="1"/>

                        <Button Style="{StaticResource RoundedButton}"
                                    Content="Open"
                                    FontWeight="DemiBold"
                                    Background="#27AE60"
                                    MinHeight="48"
                                    Height="48"
                                    Click="AboutButton_Click"
                                    Margin="0,30,0,10"
                                    Grid.Row="2"/>

                    </Grid>
                </Border>

            </Grid>
        </Grid>

    </Grid>
</Page>
