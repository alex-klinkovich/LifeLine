<Window x:Class="LifeLine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LifeLine"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1E293B">

    <Window.Resources>
        <!-- Rounded Button Style -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="22"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Menu Style -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="#273449"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="#273449"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- MENU BAR -->
        <Menu Grid.Row="0">
            <MenuItem Header="Home" Click="HomeButton_Click"/>
            <MenuItem Header="Emergency" Click="EmergencyButton_Click"/>
            <MenuItem Header="Responder" Click="ResponderButton_Click"/>
            <MenuItem Header="About" Click="AboutButton_Click"/>
        </Menu>

        <!-- Main Frame -->
        <Frame x:Name="MainFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"/>

        <!-- Home Page Content -->
        <Grid x:Name="HomePage"
              Grid.Row="1"
              Background="#1E293B">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="LifeLine"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="#E5E7EB"/>
                    <TextBlock Text="Emergency assistance system"
                               FontSize="14"
                               Foreground="#94A3B8"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Emergency Tile -->
                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                            Margin="10"
                            Background="#273449"
                            CornerRadius="28"
                            BorderBrush="#334155"
                            BorderThickness="1.5"
                            Padding="25">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Emergency Help"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="#E5E7EB"/>
                            <TextBlock Text="Immediate assistance with no login required"
                                       FontSize="13"
                                       Foreground="#94A3B8"
                                       Margin="0,10,0,25"/>

                            <Button Style="{StaticResource RoundedButton}"
                                    Content="GET HELP NOW"
                                    Height="60"
                                    FontSize="20"
                                    Background="#EF4444"
                                    Click="EmergencyButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Responder Tile -->
                    <Border Grid.Row="0" Grid.Column="1"
                            Margin="10"
                            Background="#273449"
                            CornerRadius="22"
                            BorderBrush="#334155"
                            BorderThickness="1.5"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Responder Login"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#E5E7EB"/>
                            <TextBlock Text="Access dashboard and respond to calls"
                                       FontSize="13"
                                       Foreground="#94A3B8"
                                       Margin="0,8,0,15"/>

                            <Button Style="{StaticResource RoundedButton}"
                                    Content="Login"
                                    Height="45"
                                    Background="#3A7BD5"
                                    Click="ResponderButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- About Tile -->
                    <Border Grid.Row="1" Grid.Column="1"
                            Margin="10"
                            Background="#273449"
                            CornerRadius="22"
                            BorderBrush="#334155"
                            BorderThickness="1.5"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="About LifeLine"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#E5E7EB"/>
                            <TextBlock Text="Learn how it works and features"
                                       FontSize="13"
                                       Foreground="#94A3B8"
                                       Margin="0,8,0,15"/>

                            <Button Style="{StaticResource RoundedButton}"
                                    Content="Open"
                                    Height="45"
                                    Background="#27AE60"
                                    Click="AboutButton_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
