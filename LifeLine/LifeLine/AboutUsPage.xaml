<Page x:Class="LifeLine.AboutUsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      UseLayoutRounding="True"
      TextOptions.TextFormattingMode="Display">

    <!-- ================== RESOURCES ================== -->
    <Page.Resources>
        <!-- Rounded Button (same style as MainWindow) -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--Tile -->
        <Style x:Key="Tile" TargetType="Border">
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Background" Value="#273449"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        </Style>

        <!-- Shadow wrapper -->
        <Style x:Key="TileShadow" TargetType="Border">
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="18" Opacity="0.35" ShadowDepth="6"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <!-- subtle gradient background -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E293B" Offset="0"/>
            <GradientStop Color="#0F172A" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>
    <!-- ================== ROOT ================== -->
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="About LifeLine"
                       FontSize="34"
                       FontWeight="Bold"
                       Foreground="#E5E7EB"/>
            <TextBlock Text="Emergency assistance and responder coordination system"
                       FontSize="14"
                       Foreground="#94A3B8"/>
        </StackPanel>

        <!-- CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL -->
            <Border Grid.Column="0"
                    Margin="8"
                    Style="{StaticResource Tile}">
                <StackPanel>

                    <!-- What LifeLine Does -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text=""
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="20"
                                   Foreground="#3A7BD5"
                                   Margin="0,3,12,0"/>
                        <TextBlock Text="What LifeLine Does"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#E5E7EB"/>
                    </StackPanel>

                    <TextBlock Text="• Instant emergency help request"
                               FontSize="13"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="• Automatic location sharing"
                               FontSize="13"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="• Real-time responder coordination"
                               FontSize="13"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="• Secure communication"
                               FontSize="13"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,4"/>

                    <!-- How It Works -->
                    <StackPanel Orientation="Horizontal" Margin="0,16,0,10">
                        <TextBlock Text=""
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="20"
                                   Foreground="#22C55E"
                                   Margin="0,3,12,0"/>
                        <TextBlock Text="How It Works"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#E5E7EB"/>
                    </StackPanel>

                    <TextBlock Text="1. Tap 'GET HELP NOW'"
                               FontSize="13"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="2. Location shared automatically"
                               FontSize="13"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="3. Nearby responders notified"
                               FontSize="13"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="4. Secure communication"
                               FontSize="13"
                               Foreground="#CBD5E1"/>
                    <TextBlock Text="For more info on GitHub:"
                               FontSize="13"
                               Foreground="#CBD5E1"
                               Margin="0,10,0,0"
                               FontWeight="Medium"/>
                    <TextBlock Text="Visit my GitHub"
                               Foreground="#3A7BD5"
                               FontWeight="Bold"
                               Cursor="Hand"
                               TextDecorations="Underline"
                               MouseLeftButtonUp="GitHubLink_Click"/>  

                </StackPanel>
            </Border>

            <!-- RIGHT PANEL -->
            <Border Grid.Column="1"
                    Margin="8"
                    Style="{StaticResource Tile}">
                <StackPanel>

                    <!-- Mission -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text=""
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="20"
                                   Foreground="#F59E0B"
                                   Margin="0,3,12,0"/>
                        <TextBlock Text="Mission"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#E5E7EB"/>
                    </StackPanel>

                    <TextBlock Text="Reduce emergency response time and improve coordination."
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#94A3B8"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>

                    <!-- Security -->
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,10">
                        <TextBlock Text=""
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="20"
                                   Foreground="#60A5FA"
                                   Margin="0,3,12,0"/>
                        <TextBlock Text="Security and Privacy"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#E5E7EB"/>
                    </StackPanel>

                    <TextBlock Text="Location shared only during emergencies. Data is encrypted."
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#94A3B8"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>

                    <!-- Contact -->
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,10">
                        <TextBlock Text=""
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="20"
                                   Foreground="#34D399"
                                   Margin="0,3,12,0"/>
                        <TextBlock Text="Contact"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#E5E7EB"/>
                    </StackPanel>

                    <TextBlock Text="support@lifeline.com"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#94A3B8"
                               Margin="0,0,0,2"/>
                    <TextBlock Text="+123 456 7890"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#94A3B8"/>

                    <TextBlock Text="Developed by:"
                               FontSize="13"
                               FontWeight="Bold"
                               Foreground="#E5E7EB"
                               Margin="0,14,0,6"/>
                    <TextBlock Text="- Alex Klinkovich"
                               FontSize="13"
                               Foreground="#CBD5E1"/>
                    
                </StackPanel>
            </Border>
        </Grid>

        <!-- GO BACK BUTTON -->
        <Button Grid.Row="2"
                Style="{StaticResource RoundedButton}"
                Content="Go Back"
                Background="#8B5CF6"
                FontWeight="Bold"
                MinHeight="52"
                HorizontalAlignment="Center"
                Width="200"
                Margin="0,24,0,0"
                Click="GoBack_Click" Height="52" VerticalAlignment="Top"/>
    </Grid>
</Page>
